{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "*": ["./*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}